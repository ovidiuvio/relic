# Relic Environment Variables
# Copy this file to .env and update values for your environment

# ========== Application ==========
DEBUG=true
APP_NAME=Relic
APP_VERSION=1.0.0

# ========== Database ==========

# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/relic_db

# ========== S3 / MinIO ==========
# MinIO (local development)
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin

# AWS S3 (production)
# S3_ENDPOINT_URL=https://s3.amazonaws.com
# S3_ACCESS_KEY=your-aws-access-key
# S3_SECRET_KEY=your-aws-secret-key

S3_BUCKET_NAME=relics
S3_REGION=us-east-1

# ========== Upload Limits ==========
# Maximum file size in bytes (100MB default)
MAX_UPLOAD_SIZE=104857600

# ========== Rate Limiting ==========
# Uploads per minute per IP
RATE_LIMIT_UPLOAD=10

# Reads (GET requests) per minute per IP
RATE_LIMIT_READ=100

# ========== Authentication ==========
# Secret key for JWT tokens (change this in production!)
SECRET_KEY=your-secret-key-change-this-in-production

# JWT algorithm
ALGORITHM=HS256

# Token expiration in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ========== CORS ==========
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:5173

# ========== Server ==========
# Host and port
HOST=0.0.0.0
PORT=8000
